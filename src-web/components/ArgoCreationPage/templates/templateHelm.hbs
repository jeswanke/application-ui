        repoURL: {{{helmURL}}}
        chart: {{{helmChartName}}}
        targetRevision: {{{helmPackageVersion}}}
      destination:
        server: '{{{curlyServer}}}'
        namespace: {{{destinationNS}}}
{{! ========================================================== }}
