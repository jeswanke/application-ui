{{! ==================Sync policies ========================= }}
{{! ========================================================== }}
{{! ========================================================== }}      
      syncPolicy:
        automated:
        {{#if allowEmpty}}
          allowEmpty: true
        {{/if}}
        {{#if selfHeal}}
          selfHeal: true
        {{/if}}
        syncOptions:
          {{#if validate}}
            - Validate=true
          {{/if}}
          {{#if createNamespace}}
            - CreateNamespace=true
          {{/if}}
          {{#if applyOutOfSyncOnly}}
            - ApplyOutOfSyncOnly=true
          {{/if}}
          {{#if prunePropagationPolicy}}
            {{#if propagationPolicy}}
            - PrunePropagationPolicy={{{propagationPolicy}}}
            {{/if}}
          {{/if}}
