{{! ========================================================== }}
{{! ==================Github channel ========================= }}
{{! ========================================================== }}
{{! ========================================================== }}
        repoURL: {{{githubURL}}}
        targetRevision: {{{githubBranch}}}
        path: {{{githubPath}}}
      destination:
        server: '{{{curlyServer}}}'
        namespace: {{{destinationNS}}}

{{! ========================================================== }}
{{! ========================================================== }}
{{! ==================Sync policies ========================= }}
{{! ========================================================== }}
{{! ========================================================== }}      
      syncPolicy:
        automated:
        {{#if prune}}
          prune: true
        {{/if}}
        {{#if allowEmpty}}
          allowEmpty: true
        {{/if}}
        {{#if selfHeal}}
          selfHeal: true
        {{/if}}
        syncOptions:
          {{#if validate}}
            - Validate=true
          {{/if}}
          {{#if pruneLast}}
            - PruneLast=true
          {{/if}}
          {{#if replace}}
            - Replace=true
          {{/if}}
          {{#if createNamespace}}
            - CreateNamespace=true
          {{/if}}
          {{#if applyOutOfSyncOnly}}
            - ApplyOutOfSyncOnly=true
          {{/if}}
          {{#if prunePropagationPolicy}}
            {{#if propagationPolicy}}
            - PrunePropagationPolicy={{{propagationPolicy}}}
            {{/if}}
          {{/if}}
